@using ToDoList.Frontend.Clients
@using ToDoList.Frontend.Models

@inject IToDoItemsClient toDoItemsClient
@inject NavigationManager NavigationManager

<div>
    <h2>ToDo items dashboard</h2>
    <table class="table table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th><button class="btn btn-secondary" @onclick="OrderById">Sort by Id</button></th>
                <th><button class="btn btn-primary" @onclick="OrderByName">Sort by Name</button></th>
                <th>Description</th>
                <th>IsCompleted</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in sortedData)
            {
                <tr class="table-light">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@(item.IsCompleted ? "Dokonceny" : "Nedokonceny")</td>
                    <td><button class="btn btn-success" @onclick="() => EditItem(item)">Edit</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<ToDoItemView> sortedData = new();

    public void OrderByName()
    {
        sortedData = sortedData.OrderBy(item => item.Name).ToList();
    }

    public void OrderById()
    {
        sortedData = sortedData.OrderBy(item => item.Id).ToList();
    }

    public void EditItem(ToDoItemView toDoItem)
    {
        NavigationManager.NavigateTo($"editToDoItem/{toDoItem.Id}");
    }

    protected override async Task OnInitializedAsync()
    {
        //sortedData = testData.ToList();
        sortedData = await toDoItemsClient.ReadItemsAsync();
    }
}
